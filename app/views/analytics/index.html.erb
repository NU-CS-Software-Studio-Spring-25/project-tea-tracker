        if (!vendorGroups[vendor]) {
          vendorGroups[vendor] = [];
        }
        
        const pricePerGram = price / grams;
        vendorGroups[vendor].push({
          price: price,
          pricePerGram: pricePerGram,
          grams: grams,
          value: pricePerGram
        });
      }
    });
    

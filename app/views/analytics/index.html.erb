
<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tea Collection Analytics</h1>
    <div>
      <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
  
  <!-- Analytics Overview -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card bg-success text-white h-100">
        <div class="card-body text-center">
          <h1 class="display-4 mb-0"><%= @total_teas %></h1>
          <p class="mb-0">Total Teas</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-primary text-white h-100">
        <div class="card-body text-center">
          <h1 class="display-4 mb-0"><%= @tea_categories.count %></h1>
          <p class="mb-0">Categories</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-warning text-white h-100">
        <div class="card-body text-center">
          <h1 class="display-4 mb-0"><%= @avg_rank ? @avg_rank.round(1) : 'N/A' %></h1>
          <p class="mb-0">Avg. Rank</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="card bg-info text-white h-100">
        <div class="card-body text-center">
          <h1 class="display-4 mb-0"><%= number_to_currency(@total_value) %></h1>
          <p class="mb-0">Collection Value</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Category Analysis -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Category Distribution</h5>
        </div>
        <div class="card-body">
          <!-- This would be a chart in a real implementation -->
          <div class="category-chart" style="height: 300px;">
            <!-- Placeholder for chart -->
            <div class="text-center py-5">
              <p class="text-muted">Category distribution chart would appear here</p>
              <p class="small">This would show the distribution of tea categories in your collection</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">Average Rank by Category</h5>
        </div>
        <div class="card-body">
          <% @category_avg_ranks.each do |category, avg_rank| %>
            <div class="d-flex align-items-center mb-3">
              <div class="me-3 text-end" style="width: 100px;">
                <strong><%= category %></strong>
              </div>
              <div class="progress flex-grow-1" style="height: 25px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: <%= (avg_rank.to_f / @total_teas) * 100 %>%;" 
                     aria-valuenow="<%= avg_rank %>" aria-valuemin="0" aria-valuemax="100">
                  <%= avg_rank.round(1) %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Origin Analysis -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">Tea Origins Map</h5>
        </div>
        <div class="card-body">
          <!-- This would be a map in a real implementation -->
          <div class="origins-map" style="height: 400px;">
            <!-- Placeholder for map -->
            <div class="text-center py-5">
              <p class="text-muted">Tea origins map would appear here</p>
              <p class="small">This would show a world map with markers for your tea origins</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Price Analysis -->
  <div class="row">
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-warning text-white">
          <h5 class="mb-0">Price vs. Rank Correlation</h5>
        </div>
        <div class="card-body">
          <!-- This would be a scatter plot in a real implementation -->
          <div class="price-rank-chart" style="height: 300px;">
            <!-- Placeholder for chart -->
            <div class="text-center py-5">
              <p class="text-muted">Price vs. Rank chart would appear here</p>
              <p class="small">This would show if higher-priced teas tend to have higher ranks</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card shadow-sm h-100">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">Price Distribution by Vendor</h5>
        </div>
        <div class="card-body">
          <!-- This would be a box plot in a real implementation -->
          <div class="vendor-price-chart" style="height: 300px;">
            <!-- Placeholder for chart -->
            <div class="text-center py-5">
              <p class="text-muted">Vendor price distribution chart would appear here</p>
              <p class="small">This would show how tea prices vary by vendor</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
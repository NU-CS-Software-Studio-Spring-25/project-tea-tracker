<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="auth-title">Login</h2>
      <div class="tea-icon">üçµ</div>
    </div>
    
    <div class="auth-form">
      <%= form_with url: sessions_path, local: true do |form| %>
        <div class="form-group">
          <%= form.label :username, class: "form-label" %>
          <div class="retro-input">
            <%= form.text_field :username, class: "form-control", placeholder: "Your username" %>
          </div>
        </div>

        <div class="form-group mt-3">
          <%= form.label :password, class: "form-label" %>
          <div class="retro-input">
            <%= form.password_field :password, class: "form-control", placeholder: "Your password" %>
          </div>
        </div>

        <div class="auth-actions">
          <%= form.submit "Login", class: "cta-button primary-btn" %>
        </div>
      <% end %>
      
      <div class="auth-footer">
        <p>Don't have an account? <%= link_to "Sign up", new_user_path, class: "auth-link" %></p>
      </div>
    </div>
  </div>
  
  <div class="auth-decoration">
    <div class="deco-bubble b1"></div>
    <div class="deco-bubble b2"></div>
    <div class="deco-bubble b3"></div>
    <div class="deco-shape s1"></div>
    <div class="deco-shape s2"></div>
  </div>
</div>

<h1 class="mt-5">Welcome to Tea Tracker</h1>

<% if current_user %>
  <p>You are logged in as <strong><%= current_user.username %></strong></p>
  <% if current_user.avatar_url.present? %>
    <img src="<%= current_user.avatar_url %>" class="rounded-circle" alt="Avatar" width="100">
  <% end %>
  <p><%= current_user.bio %></p>

  <div class="mt-3 mb-4">
    <%= link_to "Add New Tea", new_tea_path, class: "btn btn-success" %>
    <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-outline-danger ms-2" %>
  </div>
<% else %>
  <p><%= link_to "Login", new_session_path %> or <%= link_to "Sign Up", new_user_path %> to get started tracking your teas.</p>
<% end %>

<table class="table table-striped mt-4">
  <thead class="table-dark">
    <tr>
      <th>Tea Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Vendor</th>
      <th>Ship From</th>
      <th>Platform</th>
    </tr>
  </thead>
  <tbody>
    <% @teas.each do |tea| %>
      <tr>
        <td><%= link_to tea.name, tea_path(tea) %></td>
        <td><%= tea.category %></td>
        <td><%= number_to_currency(tea.price) %></td>
        <td><%= tea.vendor %></td>
        <td><%= tea.ship_from %></td>
        <td><%= tea.shopping_platform %></td>
      </tr>
    <% end %>
  </tbody>
</table>

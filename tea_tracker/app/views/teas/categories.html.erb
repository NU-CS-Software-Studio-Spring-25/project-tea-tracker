<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tea Categories</h1>
    <div>
      <%= link_to "Back to Dashboard", root_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
  
  <% @categories.each do |category| %>
    <div class="card shadow-sm mb-4">
      <div class="card-header bg-<%= tea_category_color(category) %> text-white">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="mb-0"><%= category %></h3>
          <span class="badge bg-white text-<%= tea_category_color(category) %>">
            <%= @teas_by_category[category].count %> teas
          </span>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <% @teas_by_category[category].each do |tea| %>
            <div class="col-md-4 col-lg-3 mb-3">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= tea.name %></h5>
                  <p class="card-text text-muted"><%= tea.vendor %></p>
                  <div class="d-flex justify-content-between">
                    <span>
                      Rank: <%= @entries[tea.id]&.rank || "N/A" %>
                    </span>
                    <span>
                      <%= number_to_currency(tea.price) || "N/A" %>
                    </span>
                  </div>
                </div>
                <div class="card-footer bg-white border-top-0">
                  <div class="d-grid">
                    <%= link_to "View Details", tea_path(tea), class: "btn btn-sm btn-outline-primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

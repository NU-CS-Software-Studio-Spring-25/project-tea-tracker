<h1>Create New Tea</h1>

<%= form_with model: @tea, local: true do |form| %>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :rank %>
        <%= form.number_field :rank, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :price %>
        <%= form.number_field :price, step: 0.01, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :category %>
        <%= form.text_field :category, class: "form-control" %>
    </div>

    <%= link_to "Back", request.referer || root_path, class: "btn btn-secondary back-button" %>
    <%= form.submit "Create Tea", class: "btn btn-primary my-1" %>
<% end %>

